<a href="/"><button type="button" class="btn btn-outline-danger btn-sm">Back</button></a>
<hr>
<h4>Post</h4>
<div class="card">
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <p class="card-description">{{description}}<span class="card-author" style="float: right">Created by {{name}} on
        {{format_date createdAt}}</span></p>
  </div>
</div>
<h4>Comments</h4>
{{#each comments}}
  {{> commentDisplay}}
{{/each}}

{{#if logged_in}}
  <div class="container mt-5">
    <div class="d-flex flex-row align-items-start">
      <textarea class="form-control textarea" id="comment-content" data-id={{id}} placeholder="Leave a comment..."></textarea>
    </div>
    <div class="mt-2 text-right">
      <button class="btn btn-danger btn-sm shadow-none" id="commentBtn" type="button">Submit</button>
    </div>
  </div>
{{/if}}


</div>
<script src="/js/comment.js"></script>