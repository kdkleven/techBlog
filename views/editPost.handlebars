{{!-- main container for page --}}
<div class="container">
    <form>
        {{!-- title of post --}}
        <h2>{{post.title}}</h2>
        {{!-- change title --}}
        <div class="form-group">
            <h4>Title</h4>
            <input type="text" class="form-control" id="changeTitle" value="{{post.title}}">
        </div>
        {{!-- change content --}}
        <div class="form-group">
            <h4>Description</h4>
            <textarea class="form-control" id="changeDescription" rows="3">{{post.description}}</textarea>
        </div>
        <button type="submit" class="btn btn-danger pageBtn" id="uPost">Update Post</button>
        <button type="submit" class="btn btn-danger pageBtn" id="dPost">Delete Post</button>
        <br>
    </form>
</div>

{{!-- javascript connection --}}
<script src="/js/editPost.js"></script>