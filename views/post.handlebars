<div class="card">
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <p class="card-description">{{description}}<span class="card-author" style="float: right">Created by {{name}} on {{format_date createdAt}}</span></p>
  </div>
</div>

{{#if logged_in}}
<div class="container mt-5">
  <div class="d-flex row">
    <div class="col-md-8">
      <div class="d-flex flex-column comment-section">
        <div class="p-2">
          <div class="d-flex flex-row align-items-start">
            <textarea class="form-control textarea" id="comment-content" data-id={{id}}></textarea>
          </div>
          <div class="mt-2 text-right">
            <button class="btn btn-danger btn-sm shadow-none" id="commentBtn" type="button">Post comment</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
{{/if}}

<h5>Comments:</h5>
  {{#each comments}}
    {{> commentDisplay}}
  {{/each}}
</div>
<script src="/js/comment.js"></script>