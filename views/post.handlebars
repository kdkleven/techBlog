{{#each post}}
<div class="card">
  <div class="card-body">
    <h5 class="card-title">{{title}}</h5>
    <p class="card-description">{{description}}</p>
    <p class="card-author">Created by {{user.name}} on {{format_date date_created}}</p>
    <a href="#" class="btn btn-primary">Add comment</a>
  </div>
</div>
{{/each}}